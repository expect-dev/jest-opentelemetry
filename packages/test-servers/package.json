{
  "name": "@traceloop/test-servers",
  "private": true,
  "main": "./dist/index.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "rollup -c",
    "start:orders": "ORDERS_SERVICE=TRUE SERVICE_NAME=orders-service PORT=3000 node -r @traceloop/instrument-opentelemetry dist/index.js",
    "start:emails": "EMAILS_SERVICE=TRUE SERVICE_NAME=emails-service PORT=3001 node -r @traceloop/instrument-opentelemetry dist/index.js",
    "start": "concurrently \"npm:start:orders\" \"npm:start:emails\""
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/uuid": "^9.0.0",
    "rollup": "^3.17.2",
    "rollup-plugin-swc3": "^0.8.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.9.0",
    "typeorm": "^0.3.12",
    "uuid": "^9.0.0",
    "@traceloop/instrument-opentelemetry": "^0.3.0"
  },
  "version": "0.3.0"
}
