{
  "name": "jest-opentelemetry",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "start:otel-receiver": "lerna run --scope @jest-opentelemetry/otel-receiver start",
    "start:test-servers": "lerna run --scope @jest-opentelemetry/test-servers start",
    "docker:test-servers": "docker build -f packages/test-servers/Dockerfile . -t test-servers",
    "test": "jest --runInBand",
    "release": "npm run build && lerna publish --conventional-commits"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.4",
    "@opentelemetry/instrumentation-http": "^0.35.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@tsconfig/recommended": "^1.0.2",
    "@types/deep-equal": "^1.0.1",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lerna": "^6.5.1",
    "opentelemetry-instrumentation-express": "^0.34.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.4.0",
    "@opentelemetry/auto-instrumentations-node": "^0.36.3",
    "@opentelemetry/sdk-node": "^0.35.1",
    "@opentelemetry/semantic-conventions": "^1.9.1",
    "@opentelemetry/tracing": "^0.24.0",
    "@swc/jest": "^0.2.24",
    "axios": "^1.3.3",
    "deep-equal": "^2.2.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "^2.8.4"
  }
}
